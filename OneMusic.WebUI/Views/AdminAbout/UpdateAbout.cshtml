@model About
@{
    ViewData["Title"] = "Hakkımızda Güncelleme Sayfası";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<form method="post">
    <label>#</label>
    <input type="text" asp-for="AboutId" class="form-control" readonly />
    <br />
    <label>Resim Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />
    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Açıklama</label>
    <textarea type="text" asp-for="Description" class="form-control" rows="4"></textarea>
    <br />
    <button class="btn btn-outline-primary">Güncelle</button>
</form>