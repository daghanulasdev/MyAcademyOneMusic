@model List<About>
@{
    ViewData["Title"] = "Hakkımızda";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@{
    int count = 0;
} 

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>İşlemler</th>
    </tr>
    @foreach(var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="height:75px;width:75px" /></td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>
                <a class="btn btn-outline-danger" asp-action="DeleteAbout" asp-route-id="@item.AboutId">Sil</a>
                <a class="btn btn-outline-success" asp-action="UpdateAbout" asp-route-id="@item.AboutId">Güncelle</a>
            </td>
        </tr>
    }
</table>
<br />
<a class="btn btn-outline-primary" asp-action="AddAbout" >Yeni Hakkımızda Alanı Ekle</a>