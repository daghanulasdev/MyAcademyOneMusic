@model List<Singer>
@{
    ViewData["Title"] = "Sanatçı Listesi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@{
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Sanatçı Resmi</th>
        <th>Sanatçı Adı</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="height:75px;width:75px" /></td>
            <td>@item.SingerName</td>
            <td>
                <button class="btn btn-outline-danger" onclick="deleteSinger(@item.SingerId)">Sil</button>
                <a class="btn btn-outline-success" asp-action="UpdateSinger" asp-route-id="@item.SingerId">Güncelle</a>
            </td>
        </tr>
    }
</table>
<br />
<a class="btn btn-outline-primary" asp-action="AddSinger">Yeni Sanatçı Ekle</a>

<script>
    function deleteSinger(id) {
        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                
                window.location.href = "/AdminSinger/DeleteSinger/" + id; 
            }

        });
    }
</script>