@model List<Album>
@{
    ViewData["Title"] = "Albümler";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
@{
    int count = 0;
}
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Kapak Fotoğrafı</th>
        <th>Albüm İsmi</th>
        <th>Fiyat</th>
        <th>Sanatçı</th>
        <th>İşlemler</th>
    </tr>
    @foreach(var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.CoverImage" style="height:75px;width:75px" /></td>
            <td>@item.AlbumName</td>
            <td>@item.Price ₺</td>
            <td>@item.Singer.SingerName</td>
            <td>
                <button class="btn btn-outline-danger" onclick="deleteAlbum(@item.AlbumId)">Sil</button>
                <a class="btn btn-outline-success" asp-action="UpdateAlbum" asp-route-id="@item.AlbumId">Güncelle</a>
            </td>
        </tr>
    }
</table>
<br />
<a class="btn btn-outline-primary" asp-action="AddAlbum">Yeni Albüm Ekle</a>

<script>
    function deleteAlbum(id) {
        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {

                window.location.href = "/AdminAlbum/DeleteAlbum/" + id;
            }

        });
    }
</script>



