@model List<Album>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
@{
    int count = 0;
}
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Kapak Fotoğrafı</th>
        <th>Albüm İsmi</th>
        <th>Fiyat</th>
        <th>Sanatçı</th>
        <th>İşlemler</th>
    </tr>
    @foreach(var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.CoverImage" style="height:75px;width:75px" /></td>
            <td>@item.AlbumName</td>
            <td>@item.Price</td>
            <td>@item.Singer.SingerName</td>
            <td>
                <a class="btn btn-outline-danger" asp-action="DeleteAlbum" asp-route-id="@item.AlbumId">Sil</a>
                <a class="btn btn-outline-success" asp-action="UpdateAlbum" asp-route-id="@item.AlbumId">Güncelle</a>
            </td>
        </tr>
    }
</table>
<br />
<a class="btn btn-outline-primary" asp-action="AddAlbum">Yeni Albüm Ekle</a>



