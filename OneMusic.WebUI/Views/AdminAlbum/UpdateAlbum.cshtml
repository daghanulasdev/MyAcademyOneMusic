@model Album
@{
    ViewData["Title"] = "UpdateAlbum";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<form method="post">
    <label>#</label>
    <input type="text" asp-for="AlbumId" class="form-control" readonly />
    <br />
    <label>Sanatci Ismi</label>
    @Html.DropDownListFor(x => x.SingerId, (List<SelectListItem>)ViewBag.singerList, new { @class = "form-control" })
    <br />
    <label>Kapak Resmi</label>
    <input type="text" asp-for="CoverImage" class="form-control" />
    <br />
    <label>Album Ismi</label>
    <input type="text" asp-for="AlbumName" class="form-control" />
    <br />
    <label>Fiyat</label>
    <input type="text" asp-for="Price" class="form-control" />
    <br />
    <button class="btn btn-outline-primary">Kaydet</button>
</form>

